# =============================================================================
# Boss Brainz - Environment Variables
# Copy this file to .env.local and fill in your values
# See lib/env.ts for validation schema
# =============================================================================

# --- Required ---

# Auth secret for CSRF (min 32 chars). Generate with: openssl rand -base64 32
AUTH_SECRET=

# OpenRouter API key for AI chat
OPENROUTER_API_KEY=

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# App URL (no trailing slash)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# --- Payments (Stripe) ---

STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# --- Optional Services ---

# Redis for rate limiting (falls back to DB if not set)
REDIS_URL=

# Vercel Blob for file uploads
BLOB_READ_WRITE_TOKEN=

# ElevenLabs for text-to-speech
ELEVENLABS_API_KEY=

# Web search (Tavily primary, Serper fallback)
TAVILY_API_KEY=
SERPER_API_KEY=

# Email via Resend
RESEND_API_KEY=
RESEND_FROM_EMAIL=

# --- Observability ---

SENTRY_DSN=
SENTRY_AUTH_TOKEN=
NEXT_PUBLIC_SENTRY_DSN=

# --- Cron Jobs ---

CRON_SECRET=

# --- Logging ---

# fatal | error | warn | info | debug | trace
LOG_LEVEL=info

# --- Testing (set automatically) ---

# PLAYWRIGHT=True
# CI_PLAYWRIGHT=True
# PLAYWRIGHT_TEST_BASE_URL=http://localhost:3000
