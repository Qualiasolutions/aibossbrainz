# ============================================================================
# AI Bossy Brainz - Environment Variables Template
# ============================================================================
# Copy this file to .env.local and fill in your values
# Generate AUTH_SECRET with: openssl rand -base64 32
# ============================================================================

# -----------------------------------------------------------------------------
# REQUIRED VARIABLES
# -----------------------------------------------------------------------------

# NextAuth/CSRF secret (must be at least 32 characters)
AUTH_SECRET=

# OpenRouter API key for AI models (Gemini 3 Flash)
# Get from: https://openrouter.ai/keys
OPENROUTER_API_KEY=

# Supabase project URL
NEXT_PUBLIC_SUPABASE_URL=https://esymbjpzjjkffpfqukxw.supabase.co

# Supabase anonymous key (public-safe, RLS enforced)
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# Supabase service role key (SERVER-ONLY, bypasses RLS)
# NEVER commit this or expose to client
SUPABASE_SERVICE_ROLE_KEY=

# Vercel Blob storage token for file uploads
BLOB_READ_WRITE_TOKEN=

# Stripe secret key for payments (SERVER-ONLY)
STRIPE_SECRET_KEY=

# Stripe webhook signing secret for verification (SERVER-ONLY)
STRIPE_WEBHOOK_SECRET=

# Production app URL (must be exact, no trailing slash)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# OPTIONAL VARIABLES
# -----------------------------------------------------------------------------

# Redis for rate limiting (falls back to database if not set)
REDIS_URL=

# Enhanced web search via Tavily
TAVILY_API_KEY=

# Alternative web search via Serper
SERPER_API_KEY=

# ElevenLabs for text-to-speech
ELEVENLABS_API_KEY=

# Sentry error tracking DSN (SERVER-ONLY)
SENTRY_DSN=

# Sentry auth token for release uploads (SERVER-ONLY)
SENTRY_AUTH_TOKEN=

# Sentry DSN for client-side errors
NEXT_PUBLIC_SENTRY_DSN=

# Resend API key for transactional emails
RESEND_API_KEY=

# From email for Resend sends
RESEND_FROM_EMAIL=

# Cron job secret for /api/cron/expire-subscriptions
CRON_SECRET=

# Logging level (fatal, error, warn, info, debug, trace)
LOG_LEVEL=info

# -----------------------------------------------------------------------------
# TESTING VARIABLES (auto-set by Playwright)
# -----------------------------------------------------------------------------

PLAYWRIGHT=
CI_PLAYWRIGHT=
PLAYWRIGHT_TEST_BASE_URL=http://localhost:3000
