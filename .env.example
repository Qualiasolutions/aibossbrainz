# =============================================================================
# Required — app will not start without these
# =============================================================================

# NextAuth / CSRF secret (min 32 chars). Generate with: openssl rand -base64 32
AUTH_SECRET=

# OpenRouter API key for AI chat (https://openrouter.ai/keys)
OPENROUTER_API_KEY=

# Supabase project credentials (https://supabase.com/dashboard/project/_/settings/api)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# Production URL (no trailing slash)
NEXT_PUBLIC_APP_URL=https://bossbrainz.aleccimedia.com

# =============================================================================
# Payments (required for subscription features)
# =============================================================================

STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_MONTHLY=price_...
STRIPE_PRICE_ANNUAL=price_...
STRIPE_PRICE_LIFETIME=price_...
STRIPE_PORTAL_CONFIG_ID=bpc_...

# =============================================================================
# Optional — features degrade gracefully without these
# =============================================================================

# Vercel Blob storage for file uploads
BLOB_READ_WRITE_TOKEN=

# Redis for rate limiting (falls back to DB)
REDIS_URL=redis://localhost:6379

# Text-to-speech
ELEVENLABS_API_KEY=
ELEVENLABS_VOICE_ID_ALEXANDRIA=
ELEVENLABS_VOICE_ID_KIM=

# Web search (Tavily > Serper > DuckDuckGo fallback chain)
TAVILY_API_KEY=
SERPER_API_KEY=

# Observability
SENTRY_DSN=
SENTRY_AUTH_TOKEN=
NEXT_PUBLIC_SENTRY_DSN=

# Email marketing
MAILCHIMP_API_KEY=
MAILCHIMP_SERVER_PREFIX=us1
MAILCHIMP_AUDIENCE_ID=

# Transactional email
MANDRILL_API_KEY=
MANDRILL_FROM_EMAIL=hello@example.com

# Meeting transcripts
FIREFLIES_API_KEY=

# Cron job authentication
CRON_SECRET=

# Logging level (fatal | error | warn | info | debug | trace)
LOG_LEVEL=info

# =============================================================================
# Testing only
# =============================================================================

